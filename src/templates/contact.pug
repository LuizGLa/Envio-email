doctype html
html
  head
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
      }
      .email-content {
        margin: 0 auto;
        padding: 20px;
        max-width: 600px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.15);
      }
      h1 {
        color: #333;
      }
      p {
        color: #666;
        line-height: 1.6;
      }
  body
    div.email-content
      h1 Dados do contato: 
      p
        | Nome: #{name}
      p
        | Email: #{email}
      p
        | Mensagem: #{message}
